# Set default values for all following accounts.
defaults
port            587
tls             on
tls_starttls    on
tls_trust_file  /etc/ssl/certs/ca-certificates.crt
tls_certcheck   on

# Outlook account
account     gmail
host        smtp.gmail.com
auth        on
from        "camaru.agru@gmail.com"
user        "camaru.agru@gmail.com"
passwordeval echo "$MAILPWD"
